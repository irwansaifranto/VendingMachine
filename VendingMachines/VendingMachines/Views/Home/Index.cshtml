@model VendingMachines.Models.TransactionsViewModel
@{
    ViewData["Title"] = "Home Page";
}
@{
    <style>
        .content-checkbox {
            display: grid;
            justify-content: center;
        }

        .float-xl-right {
            float: right;
        }
    </style>
}

<div class="container">
    <h3 class="text-center">Choose your favourite Drink !!</h3>
    <form asp-action="Index" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th>
                        Products
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Stocks
                    </th>
                    <th width="10%">
                        Quantity
                    </th>
                    <th width="30%">
                        Denomination
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProductsVwModel)
                {
                    <tr>
                        <td>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="@item.ProductId">
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriceString)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProdQuantity)
                        </td>
                        <td>
                            <div class="input-group mb-6">
                                <input type="number" class="form-control">
                            </div>
                        </td>
                        <td>
                            <select class="form-select" asp-for="@Model.Denomination" asp-items="@Model.DenominationListItem"></select>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-success float-xl-right">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-check" viewBox="0 0 16 16">
                        <path d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z"></path>
                        <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                    </svg>
                    Check Out
                </button>
            </div>
        </div>
    </form>
</div>
